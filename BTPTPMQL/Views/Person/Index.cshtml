@model X.PagedList.IPagedList<BTPTPMQL.Models.Person>
@using X.PagedList.Mvc.Core;

<table class="table">
    @{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between w3-small">
    <b>Person List</b>
    <a class="btn btn-primary" asp-action="Create">Add new +</a>
    <a class="btn btn-success" asp-action="Download">Download</a>
</div>
<hr />
    
    <tr>
        <th>Tên</th>
        <th>Email</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FullName</td>
            <td>@user.Address</td>
        </tr>
    }
</table>

<!-- Hiển thị phân trang -->
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))